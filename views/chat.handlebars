{{!-- user can enter a new message --}}

{{!-- the messages that have been sent --}}
<div class="card mx-3 my-3 chat-messages-wrapper">
    <div class="card-body" id="chat-messages">
        {{!-- This section will be hidden after at least one message gets posted --}}
        <section id="no-messages" class="chat-message">
            <div>There are no messages to display.</div>
        </section>
    </div>
</div>

<span id="username" style="display: none;">{{username}}</span>
<span id="channel" style="display: none;">{{username}}</span>

{{!-- <div class="card mx-3 my-3 chat-messages-wrapper fixed-bottom"> --}}
<div class="chat-fixed-above-footer card mx-3 my-3 chat-messages-wrapper" style="background-color: black;">
  <div class="stars">
    <div class="twinkling">
      <div class="clouds">

    <form class="chat-form card-body" id="chat-form">
        <div class="form-group">
            <textarea class="form-control my-0" id="new-chat-message" rows="1"></textarea>
        </div>
        <button type="submit" class="btn general-button my-0" id="chat-send-button">Send</button>
    </form>
</div>
</div>
</div>
</div>

<div id="chat-scroll-to-here">beep</div>


</div>

